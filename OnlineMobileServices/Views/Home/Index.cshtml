@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Home Page";
    var User = HttpContextAccessor?.HttpContext?.Session.GetString("User");
}
<header class="header-2">
    <div class="page-header min-vh-75" style="background-image: url('https://i.imgur.com/oQMadpR.png')" loading="lazy">
        <span class="mask bg-gradient-primary opacity-4"></span>
        <div class="container">
            <div class="row">
                <div class="col-lg-7 text-center mx-auto">
                    <h1 class="text-white pt-3 mt-n5">OnlineMobileServices</h1>
                    <div class="blockquote">
                        <p class="lead text-white mt-3 px-5">
                            Bringing your satisfaction is our obligation

                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="card card-body mx-3 mx-md-4 mt-n6">

    <section class="my-5 py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 ms-auto me-auto p-lg-4 mt-lg-0 mt-4 mb-3">
                    <div class="rotating-card-container">
                        <div class="card card-rotate card-background card-background-mask-primary shadow-primary mt-md-0 mt-5">
                            <div class="front front-background" style="background-image: url(https://images.unsplash.com/photo-1569683795645-b62e50fbf103?ixlib=rb-1.2.1&amp;ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;auto=format&amp;fit=crop&amp;w=987&amp;q=80); background-size: cover;">
                                <div class="card-body py-7 text-center">
                                    <i class="fa-solid fa-fingerprint"></i>
                                    <h3 class="text-white">Fast &amp; Easy</h3>
                                    <p class="text-white opacity-8">
                                        Find the best service for your mobile phone. We provide the best quality service for your mobile phone
                                    </p>
                                </div>
                            </div>
                            <div class="back back-background" style="background-image: url(https://images.unsplash.com/photo-1498889444388-e67ea62c464b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;ixlib=rb-1.2.1&amp;auto=format&amp;fit=crop&amp;w=1365&amp;q=80); background-size: cover;">
                                <div class="card-body pt-7 text-center">
                                    <h3 class="text-white">Click to go</h3>
                                    <p class="text-white opacity-8">
                                        Save your time and money with our services
                                    </p>
                                    <a asp-action="login" asp-controller="Home" class="btn btn-white btn-sm w-50 mx-auto mt-3">
                                        Get Started
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 ms-auto mt-5">
                    <div class="row justify-content-start">
                        <div class="col-md-6">
                            <div class="info">
                                <i class="fa-solid fa-ranking-star fa-2x text-primary"></i>
                                <h5 class="font-weight-bolder mt-3">
                                    Top Quality
                                </h5>
                                <p class="pe-5">
                                    We provide the best quality service for your mobile phone
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info">
                                <i class="fa-solid fa-piggy-bank fa-2x text-primary"></i>
                                <h5 class="font-weight-bolder mt-3">
                                    Save Time &amp; Money
                                </h5>
                                <p class="pe-3">
                                    We offer many exclusive service packages from carriers
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-start mt-5">
                        <div class="col-md-6 mt-3">
                            <i class="fa-solid fa-hand-holding-hand fa-2x text-primary"></i>
                            <h5 class="font-weight-bolder mt-3">
                                Customers are the top priority
                            </h5>
                            <p class="pe-5">
                                At OMS we always put the customer first, and we are always ready to serve you.
                            </p>
                            <p class="pe-5">
                                Have complain? <a asp-action="Contact" asp-controller="Home" class="text-primary">Just contact!</a>
                            </p>
                        </div>
                        <div class="col-md-6 mt-3">
                            <div class="info">
                                <i class="fa-solid fa-sync fa-2x text-primary"></i>
                                <h5 class="font-weight-bolder mt-3">
                                    Always Up to Date
                                </h5>
                                <p class="pe-3">
                                    We always update the latest technology and services to serve you better
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="my-5 py-5">
        <div class="container">
            <div class="row">
                <div class="row justify-content-center text-center my-sm-5">
                    <div class="col-lg-6">
                        <span class="badge badge-primary mb-3">Diverse Solutions</span>
                        <h2 class="text-dark mb-0">
                            Huge collection of services and solutions
                        </h2>
                        <p class="lead">
                            We offer a wide range of services and solutions for your mobile phone
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-sm-5 ">

            <div class="row pt-lg-6">
                <div class="col-lg-3">
                    <div class="position-sticky pb-lg-5 pb-3 mt-lg-0 mt-5 ps-2" style="top: 100px">
                        <h3>Telco Provider</h3>
                        <h6 class="text-secondary font-weight-normal pe-3">
                            We are currently cooperating with dozens of leading telecommunications service providers.
                        </h6>
                    </div>
                </div>
                <div class="col-lg-9">
                    @* forech ViewBag.Telco *@
                    <div class="row mt-3">
                        @foreach (var item in ViewBag.Telco)
                        {
                            <div class="col-md-4 mt-md-6">
                                <div class="card shadow-lg move-on-hover min-height-160 min-height-160">
                                    <img class="w-100 telco-logo" src="@item.Logo" alt="img" loading="lazy">
                                </div>
                                <div class="mt-2 ms-2">
                                    <h6 class="mb-0">@item.TelcoName</h6>
                                </div>
                            </div>
                        }
                    </div>




                </div>

            </div>

        </div>

    </section>
</div>
